<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_layout"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/blastAccent"
            android:id="@+id/imageView2"
            android:layout_marginTop="@dimen/abc_action_bar_default_height_material"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:textSize="30sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/lightText"
            android:layout_margin="20dp" />

    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="72dp"
                    android:text="@string/detail_time"
                    android:id="@+id/one"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/lightText"
                    />
                <TextView
                    android:id="@+id/detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/lightText"
                    android:layout_toRightOf="@+id/one"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="72dp"
                    android:text="@string/detail_what"
                    android:id="@+id/two"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/lightText"
                    />
                <TextView
                    android:id="@+id/detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:textColor="@color/lightText"
                    android:layout_toRightOf="@+id/two"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="72dp"
                    android:text="@string/detail_where"
                    android:id="@+id/three"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/lightText"
                    />
                <TextView
                    android:id="@+id/detail_location"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:textColor="@color/lightText"
                    android:layout_toRightOf="@+id/three"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="72dp"
                    android:text="@string/detail_who"
                    android:id="@+id/four"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/lightText"
                    />
                <TextView
                    android:id="@+id/detail_attendees"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:textSize="20sp"
                    android:textColor="@color/lightText"
                    android:fontFamily="sans-serif-light"
                    android:layout_toRightOf="@+id/four"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/detail_location_image"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                />


            <Button
                android:layout_margin="16dp"
                android:layout_below="@+id/detail_info"
                android:id="@+id/detail_button"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/lightText"
                android:fontFamily="sans-serif-light"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:backgroundTint="@color/blastAccent" />

        </LinearLayout>

    </ScrollView>


    <!-- Tutorial -->
    <RelativeLayout
        android:id="@+id/tutorial_detail"
        android:background="#c1000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/detail_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>
