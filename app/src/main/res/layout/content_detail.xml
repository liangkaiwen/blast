<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cse403.blast.DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:id="@+id/detail_layout"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="@string/detail_time"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/lightText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="@string/detail_what"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/lightText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="@string/detail_where"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/lightText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:text="@string/detail_who"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/lightText"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_gravity="right"
            android:id="@+id/detail_info"
            android:textColor="@color/lightText"
            >

            <TextView
                android:id="@+id/detail_time"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/lightText"
                />

            <TextView
                android:id="@+id/detail_desc"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:textColor="@color/lightText"
                />
            <TextView
                android:id="@+id/detail_location_label"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:textColor="@color/lightText"
                />

            <ImageView
                android:id="@+id/detail_location"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/detail_attendees"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:textColor="@color/lightText"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/detail_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/lightText"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:backgroundTint="@color/blastAccent" />
</LinearLayout>

